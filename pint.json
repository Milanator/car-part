{
    "preset": "laravel",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "array_syntax": {
            "syntax": "short"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "group_import": true,
        "single_import_per_statement": false,
        "not_operator_with_successor_space": false,
        "trailing_comma_in_multiline": true
    }
}